<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:id="@+id/message_container">

        <RelativeLayout
            android:id="@+id/profile_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/face" />

        </RelativeLayout>


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profile_container"
            android:layout_toRightOf="@+id/profile_container"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:textSize="16sp"
            android:textColor="@color/messageTextcolor"
            android:layout_toEndOf="@+id/profile_container"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status here"
            android:id="@+id/time"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/message"
            android:layout_alignLeft="@+id/message"
            android:layout_alignStart="@+id/message"

            />

    </RelativeLayout>


</RelativeLayout>